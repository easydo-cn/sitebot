#!/bin/bash
export LANG=en_US.UTF-8
action=$1

case $action in
    start)
        cd /sitebot && pybabel compile -d translations
        mkdir -p /var/sitebot/ssh && ln -s /var/sitebot/ssh /root/.ssh
        python /sitebot.py $2
        ;;
    shell)
        exec /bin/bash
        ;;
    python)
        exec python
        ;;
    *)
        echo "Available CMD: start | python | shell"
        ;;
esac
